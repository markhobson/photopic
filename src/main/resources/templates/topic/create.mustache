<!DOCTYPE html>
<html>
	{{>head}}
	<body>
		{{>navbar}}
		<div class="container">
			<div class="page-header">
				<h1>Add a topic</h1>
			</div>
			<form role="form" method="post" action="/topics">
				{{#topic}}
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" id="name" class="form-control" name="name" value="{{name}}"
							placeholder="Enter a topic name" autofocus/>
					</div>
				{{/topic}}
				<p>
					<button type="submit" class="btn btn-primary">
						<span class="glyphicon glyphicon-plus"></span> Add
					</button>
					<a href="/topics" class="btn btn-default">Cancel</a>
				</p>
			</form>
		</div>
	</body>
</html>
